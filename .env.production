# ========================================
# CONFIGURATION PRODUCTION - KEKELI GROUP
# ========================================

# NextAuth Configuration
NEXTAUTH_SECRET=votre_cle_secrete_tres_longue_et_securisee
NEXTAUTH_URL=https://votre-domaine.com

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/task_manager_prod

# Frontend URL
FRONTEND_URL=https://votre-domaine.com
ALLOWED_ORIGINS=https://votre-domaine.com,https://app.votre-domaine.com

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre-autre-email@gmail.com
SMTP_PASS=votre-mot-de-passe-application-gmail
SMTP_FROM="Kekeli Group <votre-autre-email@gmail.com>"

# Sécurité
NODE_ENV=production
ENCRYPTION_KEY=votre_cle_de_chiffrement_32_caracteres_minimum

# CRON Jobs
X_CRON_SECRET=votre_secret_cron_securise
X_INTERNAL_SECRET=votre_secret_interne_securise

# Taille maximale des fichiers uploadés (10MB)
MAX_FILE_SIZE=10485760

# Configuration des sessions
SESSION_SECRET=votre_session_secrete_securisee
JWT_SECRET=votre_jwt_secret_securise

# URL de base de l'API
NEXT_PUBLIC_API_URL=/api

# Configuration des logs
LOG_LEVEL=error

# Configuration du stockage (si utilisé)
STORAGE_PATH=./storage

# Configuration des limites de taux
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100
