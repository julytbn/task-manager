  label String
  ordre Int     @default(0)
  actif Boolean @default(true)

  @@map("enum_statuts_taches")
}

model EnumPriorite {
  id    String  @id @default(cuid())
  cle   String  @unique
  label String
  ordre Int     @default(0)
  actif Boolean @default(true)

  @@map("enum_priorites")
}

model EnumStatutProjet {
  id    String  @id @default(cuid())
  cle   String  @unique
  label String
  ordre Int     @default(0)
  actif Boolean @default(true)

