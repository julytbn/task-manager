  cle   String  @unique
  label String
  ordre Int     @default(0)
  actif Boolean @default(true)

  @@map("enum_categories_services")
}

model EnumTypeClient {
  id    String  @id @default(cuid())
  cle   String  @unique
  label String
  ordre Int     @default(0)
  actif Boolean @default(true)

  @@map("enum_types_clients")
}

model EnumStatutFacture {
  id    String  @id @default(cuid())
  cle   String  @unique
  label String
  ordre Int     @default(0)
  actif Boolean @default(true)

  @@map("enum_statuts_factures")
}

model EnumStatutPaiement {
  id    String  @id @default(cuid())
  cle   String  @unique
  label String
  ordre Int     @default(0)
  actif Boolean @default(true)

  @@map("enum_statuts_paiements")
}

model EnumMoyenPaiement {
  id    String  @id @default(cuid())
  cle   String  @unique
  label String
  ordre Int     @default(0)
  actif Boolean @default(true)

  @@map("enum_moyens_paiement")
}

model EnumTypeNotification {
  id    String  @id @default(cuid())
  cle   String  @unique
  label String
  ordre Int     @default(0)
  actif Boolean @default(true)

  @@map("enum_types_notifications")
}

model Charge {
  id               String          @id @default(cuid())
  montant          Float
  categorie        CategorieCharge
  description      String?
  date             DateTime        @default(now())
  projetId         String?
  employeId        String?
  justificatifUrl  String?
  notes            String?
  dateCreation     DateTime        @default(now())
  dateModification DateTime        @updatedAt
  employe          Utilisateur?    @relation("ChargesEmploye", fields: [employeId], references: [id])
  projet           Projet?         @relation(fields: [projetId], references: [id])

  @@index([categorie])
  @@index([date])
  @@index([projetId])
  @@map("charges")
}

model TimeSheet {
  id               String          @id @default(cuid())
  date             DateTime
  regularHrs       Int
  overtimeHrs      Int?
  sickHrs          Int?
  vacationHrs      Int?
  description      String?
  statut           StatutTimeSheet @default(EN_ATTENTE)
  employeeId       String
  taskId           String
  projectId        String
  dateCreation     DateTime        @default(now())
  dateModification DateTime        @updatedAt
  validePar        String?
  commentaire      String?         // Raison du rejet ou détails
  employee         Utilisateur     @relation("TimesheetEmploye", fields: [employeeId], references: [id])
  project          Projet          @relation("TimesheetProjet", fields: [projectId], references: [id], onDelete: Cascade)
  task             Tache           @relation(fields: [taskId], references: [id], onDelete: Cascade)
  valideParUser    Utilisateur?    @relation("TimesheetValidatePar", fields: [validePar], references: [id])

  @@index([projectId])
  @@index([employeeId])
  @@index([date])
  @@map("timesheets")
}

model Objectif {
  id               String          @id @default(cuid())
  employeId        String
  titre            String
  description      String?
  valeurCible      Float
  valeurActuelle   Float           @default(0)
  statut           String          @default("EN_COURS") // EN_COURS, ATTEINT, ABANDONNE
  dateCreation     DateTime        @default(now())
  dateEcheance     DateTime?
  dateModification DateTime        @updatedAt
  notes            String?
  
  employe          Utilisateur     @relation(fields: [employeId], references: [id], onDelete: Cascade)
  
  @@index([employeId])
  @@index([statut])
  @@map("objectifs")
}

model PrevisionSalaire {
  id               String   @id @default(cuid())
  employeId        String
  mois             Int
  annee            Int
  montantPrevu     Float
  montantNotifie   Float?   // Montant au moment de la dernière notification
  dateNotification DateTime? // Date d'envoi de la notification (5 jours avant)
  dateGeneration   DateTime @default(now())
  dateModification DateTime @updatedAt
  employe          Utilisateur @relation(fields: [employeId], references: [id], onDelete: Cascade)

  @@unique([employeId, mois, annee])
  @@index([employeId])
  @@index([mois, annee])
  @@map("previsions_salaires")
}

model DossierComptable {
  id                    String                @id @default(cuid())
  clientId              String
  mois                  Int                   // 1-12
  annee                 Int                   // 2026
  statut                String                @default("EN_COURS")  // EN_COURS, VALIDE
  
  // Agrégations pré-calculées (cache pour performance)
  totalEntrees          Float?                // Somme entrées du mois
  totalChargesHT        Float?                // Somme montantHT de toutes charges
  totalChargesTVA       Float?                // Somme montantTVA (charges avecTVA=true)
  totalTVA              Float?                // TVA déductible totale
  resultat              Float?                // totalEntrees - totalChargesHT
  
  // Méta
  dateCreation          DateTime              @default(now())
  dateValidation        DateTime?
  dateModification      DateTime              @updatedAt
  notes                 String?               // Notes du cabinet comptable
  
  // Relations
  client                Client                @relation(fields: [clientId], references: [id], onDelete: Cascade)
  chargesDetailees      ChargeDetaillee[]
  entrees               EntreeClient[]        @relation("EntreesOfDossier")
  situationFinanciere   SituationFinanciere?
  
  // Unique: 1 dossier par client par mois
  @@unique([clientId, mois, annee])
  @@index([clientId])
  @@index([mois, annee])
  @@index([statut])
  @@map("dossiers_comptables")
}

model ChargeDetaillee {
  id                    String                @id @default(cuid())
  dossierComptableId    String
  
  // Données de base (essentielles)
  date                  DateTime              // Date exacte de la facture (jour)
  fournisseur           String                // Nom du fournisseur/entreprise
  montantHT             Float                 // Montant hors taxes (HT)
  
  // Gestion TVA (cœur du métier VIP)
  avecTVA               Boolean               @default(false)  // Charge soumise à TVA?
  tauxTVA               Float?                // Taux TVA: 20, 5.5, 2.1, etc. (%)
  montantTVA            Float?                // Calculé: montantHT * tauxTVA / 100
  montantTTC            Float                 // Calculé: montantHT + montantTVA
  
  // Classification
  categorie             CategorieCharge
  description           String?               // Description détaillée
  
  // Justification
  justificatifUrl       String?               // URL vers PDF facture scannée
  notes                 String?               // Notes additionnelles (remarques cabinet)
  
  // Méta
  dateCreation          DateTime              @default(now())
  dateModification      DateTime              @updatedAt
  
  // Relations
  dossierComptable      DossierComptable      @relation(fields: [dossierComptableId], references: [id], onDelete: Cascade)
  
  // Index pour requêtes courantes
  @@index([date])
  @@index([avecTVA])
  @@index([dossierComptableId])
  @@index([categorie])
  @@map("charges_detaillees")
}

model EntreeClient {
  id                   String           @id @default(cuid())
  clientId             String
  dossierComptableId   String?
  date                 DateTime
  reference            String?          // Numéro de facture/référence
  description          String
  montant              Float            // Montant TTC (pour compatibilité)
  montantHT            Float?           // Sous-total moins remises
  montantTVA           Float?           // Montant TVA (18%)
  tauxTVA              Float?           @default(18.0) // Taux TVA en %
  sourceType           String?
  remise               Float?           @default(0) // Remise totale
  justificatifUrl      String?
  notes                String?
  // Ligne items
  lignesJSON           String?          // JSON array of line items {designation, quantite, prixUnitaire, totalHT}
  dateCreation         DateTime         @default(now())
  dateModification     DateTime         @updatedAt
  client               Client           @relation(fields: [clientId], references: [id], onDelete: Cascade)
  dossier              DossierComptable? @relation("EntreesOfDossier", fields: [dossierComptableId], references: [id], onDelete: SetNull)
  lignesFactures       LigneFacture[]

  @@map("entrees_clients")
}

model SituationFinanciere {
  id                    String                @id @default(cuid())
  dossierComptableId    String                @unique
  
  // === ENTRÉES ===
  totalEntrees          Float                 @default(0)
  
  // === CHARGES ===
  totalChargesHT        Float                 @default(0)        // Somme montantHT
  totalChargesTVA       Float                 @default(0)        // Somme montantTVA (charges avecTVA=true)
  
  // === CLASSIFICATION TVA ===
  totalChargesAvecTVA   Float?                // Somme HT des charges avec TVA
  totalChargesSansTVA   Float?                // Somme HT des charges sans TVA
  nombreChargesAvecTVA  Int?                  @default(0)
  nombreChargesSansTVA  Int?                  @default(0)
  
  // === RÉSULTAT ===
  resultat              Float                 @default(0)        // totalEntrees - totalChargesHT
  totalTVA              Float?                @default(0)        // TVA récupérable
  
  // === DÉTAILS (Agrégations) ===
  // JSON pour stockage flexible des agrégations
  chargesParJour        Json?                 // Structure: { "2026-03-02": [charges...], "2026-03-05": [...] }
  chargesParCategorie   Json?                 // Structure: { "UTILITIES": montant, "SALAIRES": montant }
  chargesParFournisseur Json?                 // Structure: { "EDF": montant, "Orange": montant }
  
  // Méta
  dateGeneration        DateTime              @default(now())
  dateModification      DateTime              @updatedAt
  
  // Relations
  dossierComptable      DossierComptable      @relation(fields: [dossierComptableId], references: [id], onDelete: Cascade)
  
  @@map("situations_financieres")
}

model LigneFacture {
  id                   String        @id @default(cuid())
  entreeClientId       String?
  factureId            String?
  description          String
  montant              Float
