# ========================================
# CONFIGURATION PRODUCTION - SÉCURITÉ
# ========================================

# NextAuth Configuration
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production
NEXTAUTH_URL=https://votre-domaine.com

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/task_manager_prod

# Frontend URL
FRONTEND_URL=https://votre-domaine.com
ALLOWED_ORIGINS=https://votre-domaine.com,https://app.votre-domaine.com

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@votre-domaine.com

# Google OAuth (optionnel)
GOOGLE_ID=your-google-id
GOOGLE_SECRET=your-google-secret

# Sécurité
NODE_ENV=production
ENCRYPTION_KEY=your-encryption-key-32-chars-minimum

# CRON Jobs
X_CRON_SECRET=your-secure-cron-secret
X_INTERNAL_SECRET=your-secure-internal-secret

# Monitoring (optionnel)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=error

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Sessions
SESSION_MAX_AGE=86400
SESSION_SECURE=true

# Features
ENABLE_SUBSCRIPTIONS=true
ENABLE_AUTO_INVOICES=true
ENABLE_LATE_PAYMENT_ALERTS=true
